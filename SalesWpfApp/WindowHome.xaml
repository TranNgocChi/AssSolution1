<Page x:Class="SalesWpfApp.WindowHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalesWpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WindowHome">
    <Frame Name="HomeFrame">
        <Frame.Content>
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Home Page" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                    <Button Content="Manage Member" Width="299" Height="80" Click="btnManageMember" />
                    <Button Content="Manage Product" Width="299" Height="80" Click="btnManageProduct" />
                    <Button Content="Manage Order" Width="299" Height="80" Click="btnManageOrder"/>
                    <Button Content="Manage OrderDetail" Width="299" Height="80" Click="btnManageOrderDetail"/>
                </StackPanel>
            </Grid>
        </Frame.Content>
    </Frame>
        
</Page>
